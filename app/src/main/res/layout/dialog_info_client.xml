<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="client"
            type="com.joaovitor.tucaprodutosdelimpeza.data.model.Client" />
    </data>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="295dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_info_client"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="45dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amanda souza"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="989782123"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rua das bananeiras"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bairro"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginEnd="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passa vinte"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PalhoÃ§a"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/open_buys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:backgroundTint="@android:color/white"
                android:padding="16dp"
                android:text="@string/dialog_info_client_button_made_buys"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:icon="@drawable/ic_cart_black"
                app:iconTint="#000000"
                app:iconPadding="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_client_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_dialog_info_client_call"
                app:backgroundTint="@android:color/white"
                android:padding="16dp"
                android:text="@string/dialog_info_client_button_call"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:icon="@drawable/ic_call_black"
                app:iconTint="#000000"
                app:iconPadding="16dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_header_dialog_client"
            android:src="@drawable/ic_client_white"
            tools:ignore="ContentDescription" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_edit_white" />
    </RelativeLayout>
</layout>