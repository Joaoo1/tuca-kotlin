<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="client"
            type="com.joaovitor.tucaprodutosdelimpeza.data.model.Client" />
    </data>

    <RelativeLayout
        android:id="@+id/dialog_info_client"
        android:layout_height="wrap_content"
        android:layout_width="295dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_info_client"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="45dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="@{client.name}"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@{client.phone}"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@{client.street}"
                android:textSize="16sp"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility='@{client.neighborhood.equals("") ? View.GONE : View.VISIBLE}'
                android:text="@{String.format(@string/client_neighborhood, client.neighborhood)}"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@{client.city}"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/open_buys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                android:background="@android:color/white"
                android:text="@string/dialog_info_client_button_made_buys"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:backgroundTint="@android:color/white"
                app:icon="@drawable/ic_cart_black"
                app:iconTint="#000000"
                app:iconPadding="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/call_client_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/btn_dialog_info_client_call"
                android:text="@string/dialog_info_client_button_call"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:backgroundTint="@android:color/white"
                app:icon="@drawable/ic_call_black"
                app:iconTint="#000000"
                app:iconPadding="16dp"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_header_dialog_client"
            android:src="@drawable/ic_client_white" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:paddingHorizontal="16dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_edit_white" />
    </RelativeLayout>
</layout>